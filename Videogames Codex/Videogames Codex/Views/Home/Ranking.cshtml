@model List<Videogames_Codex.Models.Videogames>
@{
    ViewBag.Title = "Ranking";
}


<h4>
    Ranking List
   </h4>

<table class="table">
    <!--Se crea una tabla..-->
    <thead>
        <!--Los encabezados de la tabla seran...-->
        <tr>
            <th style="width:200px;">Name</th>
            <th style="width:200px;">Score</th>
         
    </thead>
    <tbody>
        <!--Los datos de la tabla...-->
        @foreach (Videogames_Codex.Models.Videogames videogames in Model) //Por cada juego que tengamos en la base de datos..
        {
            <tr>
                <td>@(videogames.name)</td> <!--debajo del primer encabezado irá el nombre del juego-->
                <td>@(videogames.score)</td><!--Y asi sucesivamente..-->
                
                
            </tr>
        }
    </tbody>
</table>