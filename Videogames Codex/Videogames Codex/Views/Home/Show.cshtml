@model Videogames_Codex.Models.Videogames
<!--Importamos el modelo-->
@{
    ViewBag.Title = Model.name; //para que en la pestaña de la web salga este nombre
}

<h2>@(Model.name)
  <div class="text-right">
    <a class="btn btn-info btn-info"  href="~/Home/Edit/@Model.id">Edit</a>
    <a class="btn btn-danger btn-danger" href="~/Home/Remove/@Model.id">Remove</a>
    </div>
    </h2>

<div class="panel panel-default">
    <div class="panel-heading"></div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Name:</dt> <!--Etiqueta-->
            <dd>@Model.name</dd><!--Valor de la etiqueta anterior-->
            <dt>Publisher:</dt>
            <dd>@Model.publisher</dd><!--Valor de la etiqueta anterior-->
            <dt>Year:</dt> <!--Etiqueta-->
            <dd>@Model.year</dd><!--Valor de la etiqueta anterior-->
            <dt>Genre:</dt>
            <dd>@Model.Genre</dd><!--Valor de la etiqueta anterior-->
            <dt>Platform:</dt> <!--Etiqueta-->
            <dd>@Model.Platform</dd><!--Valor de la etiqueta anterior-->
            <dt>Score:</dt>
            <dd>@Model.score</dd><!--Valor de la etiqueta anterior-->
            
            <dt>Online:</dt>
            <dd>@(Model.online == false ? "No" :"Sí")</dd><!--Valor de la etiqueta anterior-->
            <dt>PEGI:</dt>
            <dd>@Model.Pegi</dd><!--Valor de la etiqueta anterior-->
            
        </dl>

    </div>
    <center><a class="btn btn-xs btn-primary" href="~/home/Index">Volver</a></center>
</div>